{
  "type": "object",
  "properties": {
    "port": {
      "type": "integer"
    },
    "ip": {
      "type": "string"
    },
    "api_version": {
      "type": "string"
    },
    "db_settings": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "reconnect_delay": {
          "type": "integer"
        }
      },
      "required": ["url", "enabled", "reconnect_delay"]
    },
    "jwt": {
      "type": "object",
      "properties": {
        "access_token_lifetime": {
          "type": "integer"
        },
        "access_token_secret": {
          "type": "string"
        },
        "refresh_token_lifetime": {
          "type": "integer"
        },
        "refresh_token_secret": {
          "type": "string"
        }
      },
      "required": [
        "access_token_lifetime",
        "access_token_secret",
        "refresh_token_lifetime",
        "refresh_token_secret"
      ]
    },
    "mailer": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        },
        "secure": {
          "type": "boolean"
        },
        "enabled": {
          "type": "boolean"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["host", "port", "secure", "enabled", "user", "password"]
    },
    "logger": {
      "type": "object",
      "properties": {
        "info": {
          "type": "object",
          "properties": {
            "console_output": {
              "type": "boolean"
            },
            "file_write": {
              "type": "boolean"
            },
            "file_path": {
              "type": "string"
            }
          },
          "required": ["console_output", "file_write", "file_path"]
        },
        "error": {
          "type": "object",
          "properties": {
            "console_output": {
              "type": "boolean"
            },
            "file_write": {
              "type": "boolean"
            },
            "file_path": {
              "type": "string"
            }
          },
          "required": ["console_output", "file_write", "file_path"]
        },
        "access": {
          "type": "object",
          "properties": {
            "console_output": {
              "type": "boolean"
            },
            "file_write": {
              "type": "boolean"
            },
            "file_path": {
              "type": "string"
            }
          },
          "required": ["console_output", "file_write", "file_path"]
        }
      },
      "required": ["info", "error", "access"]
    }
  },
  "required": [
    "port",
    "ip",
    "api_version",
    "db_settings",
    "jwt",
    "mailer",
    "logger"
  ]
}
